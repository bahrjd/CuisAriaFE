<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:local="clr-namespace:CuisAriaFE" Title="Shopping List" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CuisAriaFE.Pages.ShoppingListPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Recipes Home" Order="Secondary" Clicked="OnRecipesHomeClicked"/>
        <ToolbarItem Text="New Recipe" Order="Secondary" Clicked="OnNewRecipeClicked"/>
        <ToolbarItem Text="Menu" Order="Secondary" Clicked="OnMenuClicked"/>
        <ToolbarItem Text="LogOut" Order="Secondary" Clicked="OnLogOutClicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label FontFamily="Verdana" FontSize="Large" FontAttributes="Bold" Text="{Binding App.shopListName}"/>
            <ListView IsRefreshing="{Binding IsBusy}" ItemsSource="{Binding ShoppingList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <StackLayout Orientation="Horizontal" VerticalOptions="Center"  Grid.Row="0">
                                        <Label Grid.Column="0" WidthRequest="10" VerticalTextAlignment="Start" HorizontalTextAlignment="Center" FontFamily="Verdana"  Text=""/> 
                                        <Label Grid.Column="1" WidthRequest="70" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" FontFamily="Verdana"  Text="{Binding ItemQty, Converter={StaticResource DecimalToFrac}"/>
                                        <Label Grid.Column="3" WidthRequest="90" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" FontFamily="Verdana"  Text="{Binding ItemUnit}"/>
                                        <Label Grid.Column="4" WidthRequest="185" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" FontFamily="Verdana"  Text="{Binding ItemName}"/>
                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>